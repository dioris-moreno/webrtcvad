{
  "name": "@libersys/webrtcvad",
  "version": "1.1.7",
  "description": "Bindings for the WebRTC VAD.",
  "license": "MIT",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "typesVersions": {
    "*": {
      "import": [
        "./lib/esm/index.d.ts"
      ],
      "require": [
        "./lib/cjs/index.d.ts"
      ]
    }
  },
  "files": [
    "src",
    "binding.gyp",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "webrtc",
    "vad",
    "audio",
    "pcm"
  ],
  "bugs": {
    "url": "https://github.com/libersys/webrtcvad/issues"
  },
  "repository": "git+https://github.com/libersys/webrtcvad.git",
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^1.7.2"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "postbuild": "node scripts/fix-esm.cjs && node scripts/fix-cjs.cjs",
    "prepare": "npm run build",
    "install": "node-gyp rebuild",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "preversion": "npm run build && npm test",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/bindings": "^1.5.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.75",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "browser": false,
  "type": "module",
  "gypfile": true
}
