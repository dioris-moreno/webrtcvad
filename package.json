{
  "name": "webrtcvad",
  "version": "1.1.0",
  "description": "Bindings for the WebRTC VAD.",
  "license": "MIT",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "typesVersions": {
    "*": {
      "import": [
        "./lib/esm/index.d.ts"
      ],
      "require": [
        "./lib/cjs/index.d.ts"
      ]
    }
  },
  "keywords": [
    "webrtc",
    "vad",
    "audio",
    "pcm"
  ],
  "bugs": {
    "url": "https://github.com/dioris-moreno/webrtcvad/issues"
  },
  "repository": "git+https://github.com/dioris-moreno/webrtcvad.git",
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^1.7.2"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "prepare": "npm run build",
    "install": "node-gyp rebuild"
  },
  "devDependencies": {
    "@types/bindings": "^1.5.5",
    "@types/node": "^18.19.75",
    "typescript": "^5.7.3"
  },
  "browser": false,
  "type": "module",
  "gypfile": true
}
