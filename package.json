{
  "name": "webrtcvad",
  "version": "1.1.0",
  "description": "Bindings for the WebRTC VAD.",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": {
      "default": "./dist/index.cjs"
    },
    "import": {
      "default": "./dist/index.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "import": [
        "./dist/index.d.ts"
      ],
      "require": [
        "./dist/index.d.ts"
      ]
    }
  },
  "keywords": [
    "webrtc",
    "vad",
    "audio",
    "pcm"
  ],
  "bugs": {
    "url": "https://github.com/dioris-moreno/webrtcvad/issues"
  },
  "repository": "git+https://github.com/dioris-moreno/webrtcvad.git",
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^1.7.2"
  },
  "scripts": {
    "build": "tsc && tsc --project tsconfig.esm.json",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "install": "node-gyp rebuild"
  },
  "devDependencies": {
    "@types/bindings": "^1.5.5",
    "@types/node": "^18.19.75",
    "typescript": "^5.7.3"
  },
  "browser": false,
  "type": "module",
  "gypfile": true
}
